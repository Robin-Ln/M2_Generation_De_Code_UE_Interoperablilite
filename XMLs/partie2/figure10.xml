<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE modele SYSTEM "minispec.dtd">

<modele>

    <entity name="Satelite">

        <attribute name="nom">
            <typeElement type="String"/>
        </attribute>

        <attribute name="id">
            <typeElement type="Integer"/>
        </attribute>

        <attribute name="parent">
            <typeElement type="Flotte"/>
        </attribute>

    </entity>

    <entity name="Flotte">
        <attribute name="satelites">
            <collection typeCollection="List" max="10">
                <typeElement type="Satelite"/>
            </collection>
        </attribute>
    </entity>

</modele>