<?fr.ubo.m2tiil.louarn.xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE modeleMinispec SYSTEM "minispec.dtd">

<modeleMinispec name="minispecModele">

    <entity name="Entity">
        <attributeMinispec name="name">
            <typeElement type="String"/>
        </attributeMinispec>

        <attributeMinispec name="subype">
            <typeElement type="Integer"/>
        </attributeMinispec>

        <attributeMinispec name="attributs">
            <collection typeCollection="List">
                <typeElement type="Attribute"/>
            </collection>
        </attributeMinispec>
    </entity>

    <entity name="Attribute">
        <attributeMinispec name="name">
            <typeElement type="String"/>
        </attributeMinispec>

        <attributeMinispec name="type">
            <typeElement type="Type"/>
        </attributeMinispec>
    </entity>

    <entity name="Type">
    </entity>

    <entity name="Array" subtype="Type">
        <attributeMinispec name="type">
            <typeElement type="Type"/>
        </attributeMinispec>

        <attributeMinispec name="size">
            <typeElement type="Integer"/>
        </attributeMinispec>
    </entity>

    <entity name="Collection" subtype="Type">
        <attributeMinispec name="typeCollection">
            <typeElement type="String"/>
        </attributeMinispec>

        <attributeMinispec name="type">
            <typeElement type="Type"/>
        </attributeMinispec>
    </entity>

    <entity name="TypeElement" subtype="Type">
        <attributeMinispec name="type">
            <typeElement type="String"/>
        </attributeMinispec>
    </entity>

</modeleMinispec>
